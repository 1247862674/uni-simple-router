  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2015"],
  },
  "include": [
    "src/global.d.ts",
    "src/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}